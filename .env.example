# ============================================================
# ENVIRONMENT CONFIGURATION FOR $ICE PROTOCOL
# ============================================================
# IMPORTANT: NEVER commit .env with real secrets to version control
# Copy this file to .env and fill in your values
# ============================================================

# Network Configuration
SOLANA_NETWORK=devnet
# devnet | testnet | mainnet-beta
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_WS_URL=wss://api.devnet.solana.com

# Token & Account Configuration
ICE_TOKEN_MINT=
# The SPL Token mint address for $ice
ICE_CREATOR_FEE_WALLET=
# Public address of the fee wallet (pump.fun creator fee wallet)
BOT_KEYPAIR_B58=
# Base58-encoded private key of the bot operator wallet
# Alternative: set BOT_KEYPAIR_FILE instead
BOT_KEYPAIR_FILE=
# Path to keypair JSON file (alternative to BOT_KEYPAIR_B58)

# Fee Source Configuration
FEE_SOURCE=wallet-watcher
# wallet-watcher | api | mock
FEE_POLL_INTERVAL_MS=30000
# How often to check for new fees (in milliseconds)
FEE_CONFIRMATION_DEPTH=32
# Solana confirmation depth for transactions

# Executor Configuration
EXECUTOR_MODE=dry-run
# dry-run | live
EXECUTOR_EPOCH_INTERVAL_SECONDS=1800
# Epoch duration (default 30 minutes)
MAX_BUDGET_PER_EPOCH_SOL=1.0
# Maximum SOL to spend per epoch
MIN_INTERVAL_SECONDS=300
# Minimum seconds between actions
MAX_CONSECUTIVE_FAILURES=5
# Circuit breaker: stop after N failures

# DEX Configuration
DEX_ENGINE=mock
# mock | raydium | orca
RAYDIUM_RPC_POOL_SIZE=3
# Connection pool size for Raydium
MAX_SLIPPAGE_BPS=500
# Max slippage in basis points (5% = 500)
MAX_PRICE_IMPACT_BPS=1000
# Max price impact in basis points (10% = 1000)

# Ice Health Configuration
ICE_HEALTH_THRESHOLD=50
# Health threshold for ICE_ALIVE status (0-100)
ICE_HEALTH_CHECK_INTERVAL_MINUTES=5
# How often to compute and publish health
BUYBACK_FREQUENCY_WEIGHT=0.25
# Weight in health formula (0-1)
BUYBACK_COVERAGE_WEIGHT=0.25
# Weight in health formula (0-1)
LIQUIDITY_DEPTH_WEIGHT=0.25
# Weight in health formula (0-1)
VOLATILITY_PENALTY_WEIGHT=0.15
# Weight in health formula (0-1)
TIME_DECAY_WEIGHT=0.10
# Weight in health formula (0-1)

# Allocation Configuration
ALLOCATION_MODE=adaptive
# adaptive | fixed
ALLOCATION_BUYBACK_PCT=70
# Percentage of fees for buyback (default 70%)
ALLOCATION_LP_PCT=20
# Percentage of fees for LP (default 20%)
ALLOCATION_BURN_PCT=5
# Percentage of fees to burn (default 5%)
ALLOCATION_COOLING_PCT=5
# Percentage of fees for cooling events (default 5%)

# Safety Parameters
MIN_BALANCE_TO_OPERATE_SOL=0.5
# Minimum bot balance to execute
DRIFT_TOLERANCE_BPS=50
# Tolerance for state drift checks
USE_VERSIONED_TRANSACTIONS=true
# Use versioned transactions for Solana v1.14+

# Logging & Reporting
LOG_LEVEL=info
# debug | info | warn | error
REPORT_INTERVAL_MINUTES=60
# How often to generate reports
REPORTS_DIR=./reports
# Directory for JSON/TXT reports
PROMETHEUS_PORT=9090
# Metrics port (optional)
ENABLE_METRICS=false
# Enable Prometheus metrics export

# Advanced
SIMULATE_MODE=false
# If true, run simulation with mock prices
SIMULATION_DURATION_EPOCHS=24
# Number of epochs to simulate
ENABLE_CONSOLE_LOG=true
# Also log to console (not just to file)
